# Changing window focus

# switch focus with vim keys
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# modifying current layout

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror y-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# modifying window size

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# resize to equal proportions
shift + alt - e : yabai -m space --balance

# move window to prev and next space
shift + alt - p : yabai -m window -m window --space prev;
shift + alt - n : yabai -m window -m window --space next;

# move window to specific space
shift + alt - 1 : yabai -m window -m window --space 1;
shift + alt - 2 : yabai -m window -m window --space 2;
shift + alt - 3 : yabai -m window -m window --space 3;
shift + alt - 4 : yabai -m window -m window --space 4;
shift + alt - 5 : yabai -m window -m window --space 5;
shift + alt - 6 : yabai -m window -m window --space 6;
shift + alt - 7 : yabai -m window -m window --space 7;

